const input = document.getElementById('input');
const output = document.getElementById('output');

// üîê Replace with your actual OpenAI API key
const API_KEY = 'YOUR_OPENAI_API_KEY';

let story = "You wake up in a forest.\n";
output.textContent = story;

input.addEventListener('keydown', async (e) => {
  if (e.key === 'Enter') {
    const userInput = input.value.trim();
    if (!userInput) return;

    // Show user's input
    story += `\n>> ${userInput}\n`;
    output.textContent = story;
    input.value = '';

    try {
      // Call OpenAI API
      const response = await fetch('https://api.openai.com/v1/chat/completions', {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${API_KEY}`,
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'gpt-3.5-turbo',
          messages: [
            { role: 'system', content: 'You are an AI game master in a text-based adventure. Keep responses short and immersive.' },
            { role: 'user', content: story }
          ],
          temperature: 0.8
        })
      });

      const data = await response.json();

      if (data.choices && data.choices.length > 0) {
        const reply = data.choices[0].message.content.trim();
        story += reply + '\n';
        output.textContent = story;
        output.scrollTop = output.scrollHeight; // Auto scroll down
      } else {
        story += "‚ö†Ô∏è No response from the AI.\n";
        output.textContent = story;
      }
    } catch (error) {
      story += "‚ùå Error: " + error.message + "\n";
      output.textContent = story;
    }
  }
});
